{
    "name": "dongo",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron:dev": "npm run build && electron .",
        "electron:watch": "vite --watch",
        "make": "npm run build && electron-forge make",
        "start": "electron-forge start",
        "package": "npm run build && electron-forge package"
    },
    "dependencies": {
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-slot": "^1.2.3",
        "@tailwindcss/vite": "^4.1.13",
        "axios": "^1.11.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-squirrel-startup": "^1.0.1",
        "lucide-react": "^0.543.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-icons": "^5.5.0",
        "react-json-pretty": "^2.2.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.13"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.9.0",
        "@electron-forge/maker-deb": "^7.9.0",
        "@electron-forge/maker-rpm": "^7.9.0",
        "@electron-forge/maker-squirrel": "^7.9.0",
        "@electron-forge/maker-zip": "^7.9.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
        "@electron-forge/plugin-fuses": "^7.9.0",
        "@electron-forge/publisher-github": "^7.9.0",
        "@electron/fuses": "^1.8.0",
        "@eslint/js": "^9.33.0",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "electron": "^38.0.0",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "tw-animate-css": "^1.3.8",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.2",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "asar": true,
                "extraResource": [
                    "./dist",
                    "./assets"
                ],
                "icon": "./assets/icon"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Dongo",
                        "authors": "Marcus Coelho",
                        "description": "API client simples feito com Electron e React",
                        "exe": "Dongo.exe",
                        "icon": "./assets/icon.ico"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "win32"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                {
                    "name": "@electron-forge/plugin-auto-unpack-natives",
                    "config": {}
                }
            ]
        }
    }
}
